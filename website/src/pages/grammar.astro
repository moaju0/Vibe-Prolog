---
import Layout from '../layouts/Layout.astro';
import { readFileSync } from 'fs';
import { join } from 'path';
import { marked } from 'marked';

const grammarPath = join(process.cwd(), 'src', 'content', 'GRAMMAR_COMPARISON.md');
let grammarContent = '';
try {
  grammarContent = readFileSync(grammarPath, 'utf-8');
} catch (e) {
  console.error('Error reading GRAMMAR_COMPARISON.md:', e);
}

const htmlContent = marked.parse(grammarContent) as string;
---

<Layout title="Grammar Comparison - Vibe Prolog" description="Detailed grammar compatibility comparison between Vibe, Scryer, and SWI">
  <div class="page-header">
    <h1>GRAMMAR COMPARISON</h1>
    <p>VIBE VS SCRYER VS SWI PROLOG</p>
  </div>

  <div class="content" set:html={htmlContent} />
</Layout>

<style>
  .page-header {
    text-align: center;
    padding: var(--space-xl) 0 var(--space-2xl);
    border-bottom: 2px solid rgba(57, 255, 20, 0.5);
    margin-bottom: var(--space-xl);
  }

  .page-header h1 {
    font-family: var(--font-display);
    font-size: clamp(2.5rem, 6vw, 4rem);
    margin-bottom: var(--space-sm);
    color: var(--color-acid-green);
    letter-spacing: 0.1em;
    text-shadow:
      0 0 20px rgba(57, 255, 20, 0.6),
      0 0 40px rgba(57, 255, 20, 0.4);
    animation: neonPulse 2s infinite;
  }

  .page-header p {
    font-size: 1.2rem;
    color: var(--color-cyber-blue);
    letter-spacing: 0.08em;
    text-shadow: 0 0 15px rgba(0, 240, 255, 0.4);
  }

  .content {
    max-width: 1100px;
    margin: 0 auto;
  }

  .content :global(h1) {
    font-family: var(--font-display);
    font-size: 2.5rem;
    margin-top: var(--space-2xl);
    margin-bottom: var(--space-md);
    color: var(--color-acid-green);
    letter-spacing: 0.08em;
    text-shadow: 0 0 20px rgba(57, 255, 20, 0.4);
    border-bottom: 2px solid rgba(57, 255, 20, 0.5);
    padding-bottom: var(--space-sm);
  }

  .content :global(h2) {
    font-family: var(--font-display);
    font-size: 2rem;
    margin-top: var(--space-xl);
    margin-bottom: var(--space-md);
    color: var(--color-electric-magenta);
    letter-spacing: 0.05em;
    text-shadow: 0 0 15px rgba(255, 0, 128, 0.4);
  }

  .content :global(table) {
    width: 100%;
    border-collapse: collapse;
    margin: var(--space-lg) 0;
  }

  .content :global(th),
  .content :global(td) {
    border: 1px solid rgba(0, 240, 255, 0.3);
    padding: var(--space-sm);
  }

  .content :global(th) {
    background: rgba(0, 240, 255, 0.1);
    color: var(--color-cyber-blue);
  }

  .content :global(code) {
    background-color: rgba(26, 26, 26, 0.8);
    color: var(--color-acid-green);
    padding: 0.2rem 0.6rem;
    border: 1px solid rgba(57, 255, 20, 0.3);
  }

  .content :global(a) {
    color: var(--color-electric-magenta);
    text-decoration: none;
    text-shadow: 0 0 10px rgba(255, 0, 128, 0.3);
    transition: all var(--duration-fast);
  }

  .content :global(a:hover) {
    color: var(--color-cyber-blue);
    text-shadow: 0 0 15px rgba(0, 240, 255, 0.6);
  }

  @media (max-width: 768px) {
    .page-header {
      padding: var(--space-lg) 0 var(--space-xl);
    }

    .page-header h1 {
      font-size: clamp(2rem, 6vw, 3rem);
    }

    .page-header p {
      font-size: 1rem;
    }

    .content :global(table) {
      display: block;
      overflow-x: auto;
    }
  }
</style>
